#cloud-config
vyos_config_commands:
  # Enable configuration mode
  - configure

  # Global system settings
  - set system host-name 'vyos-router'
  - set system domain-name 'home.arpa'
  - set system name-server '1.1.1.1'
  - set system name-server '8.8.8.8'
  - set system login user kc2admin authentication plaintext-password 'kc2admin'
  - set system config-management commit-revisions '20'
  - set system console device ttyS0 speed '9600'

  # Time synchronization
  - set system ntp server 0.pool.ntp.org
  - set system ntp server 1.pool.ntp.org
  - set system ntp server 2.pool.ntp.org

  # SSH Service
  - set service ssh port '2222'
  - set service ssh listen-address '0.0.0.0'
  - set service ssh disable-password-authentication 'false'

  # WAN Configuration (eth0)
  - set interfaces ethernet eth0 address 'dhcp'
  - set interfaces ethernet eth0 description 'WAN'
  - set firewall name WAN-IN default-action 'drop'
  - set firewall name WAN-LOCAL default-action 'drop'
  - set interfaces ethernet eth0 firewall in name 'WAN-IN'
  - set interfaces ethernet eth0 firewall local name 'WAN-LOCAL'

  # LAN Configuration (eth1)
  - set interfaces ethernet eth1 address '192.168.1.1/24'
  - set interfaces ethernet eth1 description 'LAN'
  - set interfaces bridge br0 member interface eth1
  - set interfaces bridge br0 address '192.168.1.1/24'
  - set service dhcp-server shared-network-name LAN subnet 192.168.1.0/24 default-router '192.168.1.1'
  - set service dhcp-server shared-network-name LAN subnet 192.168.1.0/24 domain-name 'home.arpa'
  - set service dhcp-server shared-network-name LAN subnet 192.168.1.0/24 range 0 start '192.168.1.100'
  - set service dhcp-server shared-network-name LAN subnet 192.168.1.0/24 range 0 stop '192.168.1.200'

  # VLAN Configuration for DMZ and IoT on LAN
  - set interfaces ethernet eth1 vif 10 description 'DMZ'
  - set interfaces ethernet eth1 vif 10 address '192.168.10.1/24'
  - set interfaces ethernet eth1 vif 20 description 'IoT'
  - set interfaces ethernet eth1 vif 20 address '192.168.20.1/24'
  - set service dhcp-server shared-network-name DMZ subnet 192.168.10.0/24 default-router '192.168.10.1'
  - set service dhcp-server shared-network-name DMZ subnet 192.168.10.0/24 range 0 start '192.168.10.100'
  - set service dhcp-server shared-network-name DMZ subnet 192.168.10.0/24 range 0 stop '192.168.10.200'
  - set service dhcp-server shared-network-name IoT subnet 192.168.20.0/24 default-router '192.168.20.1'
  - set service dhcp-server shared-network-name IoT subnet 192.168.20.0/24 range 0 start '192.168.20.100'
  - set service dhcp-server shared-network-name IoT subnet 192.168.20.0/24 range 0 stop '192.168.20.200'

  # NAT Configuration for Internet Access
  - set nat source rule 100 outbound-interface 'eth0'
  - set nat source rule 100 source address '192.168.0.0/16'
  - set nat source rule 100 translation address 'masquerade'

  # Firewall Rules
  - set firewall global-options state-policy established action 'accept'
  - set firewall global-options state-policy related action 'accept'
  - set firewall name WAN-IN rule 10 action 'accept'
  - set firewall name WAN-IN rule 10 state established 'enable'
  - set firewall name WAN-IN rule 10 state related 'enable'
  - set firewall name WAN-LOCAL rule 10 action 'accept'
  - set firewall name WAN-LOCAL rule 10 state established 'enable'
  - set firewall name WAN-LOCAL rule 10 state related 'enable'
  - set firewall name LAN-IN default-action 'accept'
  - set firewall name LAN-LOCAL default-action 'accept'

  # Logging and Debugging
  - set system syslog global facility all level 'info'
  - set system syslog global facility protocols level 'debug'

  # Commit and Save
  - commit
  - save

